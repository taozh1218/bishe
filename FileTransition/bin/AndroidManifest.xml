            </intent-filter>
        </activity>
        <activity android:name="com.taozhang.filetransition.ui.SearchFragment" >
        </activity>
        <activity android:name="com.taozhang.filetransition.ui.FileListActivity" >
        </activity>
        <activity
            android:name="com.taozhang.filetransition.ui.MusicListActivity"
