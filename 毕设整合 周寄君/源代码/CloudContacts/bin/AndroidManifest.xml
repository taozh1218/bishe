<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.plus.cloudcontacts"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name="com.plus.cloudcontacts.util.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.plus.cloudcontacts.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.plus.cloudcontacts.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.plus.cloudcontacts.activity.CardActivity"
            android:label="@string/title_activity_card" >
        </activity>
        <activity
            android:name="com.plus.cloudcontacts.activity.MenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.plus.cloudcontacts.activity.GroupListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.plus.cloudcontacts.activity.JoinGroupActivity"
            android:label="@string/title_activity_join_group" >
        </activity>
        <activity
            android:name="com.plus.cloudcontacts.activity.CreateGroupActivity"
            android:label="@string/title_activity_create_group" >
        </activity>
        <activity
            android:name="com.plus.cloudcontacts.activity.ViewGroupActivity"
            android:label="@string/title_activity_view_group" >
        </activity>

        <receiver android:name="com.plus.cloudcontacts.broadcast.PhoneListen" >
            <intent-filter android:priority="20" >
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <service android:name="com.plus.cloudcontacts.service.WmService" >
        </service>
        <service android:name="com.plus.cloudcontacts.service.GetChatDataService" >
        </service>

        <activity
            android:name="com.plus.cloudcontacts.activity.ChatActivity"
            android:label="@string/title_activity_chat" >
        </activity>
    </application>

</manifest>
